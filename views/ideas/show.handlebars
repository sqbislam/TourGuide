<!DOCTYPE html>

<div class="row">
	<div class="col s12 m9">
		<h3>{{ideas.title}}</h3>
		<div class="card idea">
			<div class="card-content">
				<span class="card-title">{{formatDate ideas.date 'MMMM Do YYYY'}}</span>
				{{{ideas.body}}}
			</div>
		</div>

	{{#if ideas.allowComments}}
		<div class="card">
			<dir class="card-content">
				<span class="card-title"> Comments </span>
				{{#if user}}

				<form method="post" action="/ideas/comment/{{ideas.id}}">
					<div class="input-field">
						<textarea name="commentBody" class="materialize-textarea"></textarea>
						<label>Add Comment</label>
					</div>
					<input type="submit" value="submit" class="btn-small blue">
				</form>
				
				

				{{else}}

				<p>Please  <a href="/auth/google" class="btn-small red darken-3"><i class="fa fa-google"></i> 
				Login </a>  to comment.</p>

				{{/if}}
			</dir>
		</div>

		{{#each ideas.comments}}
			<div class="card">
				<div class="card-content">
					<h6>{{commentBody}}</h6>
					<br>
					<div class="chip">
				    	<img src="{{commentUser.image}}" alt="Contact Person">
				    	{{commentUser.firstName}} {{commentUser.lastName}}
				  	</div>
				  	<br>
				  	<small>Posted on: {{formatDate commentDate 'MMMM Do YYYY'}} </small>
				</div>
			</div>
		{{/each}}

	{{/if}}
	</div>

	<div class="col s12 m3">
		<div class="card">
		<span class="card-title">{{ideas.user.firstName}} {{ideas.user.lastName}}</span>
	      <div class="card-image">
	        <img src="{{ideas.user.image}}" class="circle responsive-img">
	      </div>
	        <div class="card-action">
	        	<a href="/ideas/user/{{ideas.user.id}}"> More From {{ideas.user.firstName}}</a> 
	        </div>
	    </div>
	</div>
</div>
