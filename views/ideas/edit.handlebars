
<h2>Edit Idea</h2>

<div class="row">
	<form action="/ideas/{{idea.id}}?_method=PUT" method="post" class="col s12">
		<input type="hidden" name="_method" value="PUT">
		<div class="row">
			<div class="input-field">
				<input type="text" name="title" value="{{idea.title}}">
				<label for="title">Title</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<select name="status">
					{{#selects idea.status}}
						<option value="public" selected> Public </option>
						<option value="private"> Private </option>
						<option value="unpublished"> Unpublished </option>
					{{/selects}}
				</select>
				<label for="status">Status</label>
			</div>
		</div>


		<div class="row">
			<p>
		      <label>
		        <input type="checkbox" name="allowComments" class="filled-in" {{#if idea.allowComments}} 
		        checked="checked" {{/if}} />
		        <span>Allow Comments</span>
		      </label>
		    </p>
		</div>

		<div class="row">
			<div class="input-field">
				<h5>Note down your Idea:</h5>
				<textarea name="body">{{idea.body}}</textarea>
			</div>
		</div>

		<input type="submit" value="submit" class="btn blue">
	</form>

</div>

